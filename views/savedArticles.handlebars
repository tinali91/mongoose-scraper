<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/savedArticles">Saved articles<span class="sr-only">(current)</span></a>
      </li>
      <form class="form-inline">
        <a id="clear" class="btn btn-outline-success" role="button" href="/clearsaved">Clear articles</a>
      </form>
    </ul>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Saved articles</h1>
    <p class="lead">Your saved articles can be found here.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      {{#each articles}}
      <div class="card">
        <div class="card-body">
          <a id="linkinput" href="https://www.teenvogue.com/{{link}}">
            <h5 id="titleinput" class="card-title">{{title}}</h2>
          </a>
          <p id="summaryinput" class="card-text">{{summary}}<span>
              <button class="btn btn-primary deleteArticle" data-id="{{this.id}}">Delete from saved</button>
              <button type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#noteModal"
                data-id="{{this.id}}">Add Note</button>
            </span></p>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="noteModalLabel">{{title}}</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="message-text" class="col-form-label">New Note:</label>
                  <textarea class="form-control" id="note-text"></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save note</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>