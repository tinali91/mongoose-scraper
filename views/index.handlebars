<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/savedArticles">Saved articles</a>
      </li>
      <form class="form-inline">
        <a id="scrape" class="btn btn-outline-success mx-2" role="button" href="/scrape">Scrape new articles!</a>
        <a id="clear" class="btn btn-outline-success" role="button" href="/clear">Clear articles</a>
      </form>
    </ul>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid shadow-sm" id="main-background">
  <div class="container">
    <h1 class="display-2 text-center py-5 text-white">Mongo Scraper</h1>
    <p class="lead text-center text-white"><strong>Scrape articles in from the Teen Vogue politics site.</strong></p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      {{#each articles}}
      <div class="card border-success mb-3 shadow">
        <div class="card-header bg-transparent">
          <a id="linkinput" href="https://www.teenvogue.com/{{link}}" target="blank">
            <h5 id="titleinput" class="card-title">{{title}}</h2>
          </a>
        </div>
        <div class="card-body">
          <p id="summaryinput" class="card-text">{{summary}}<span>
              <button class="btn btn-outline-success saveArticle" data-id="{{this.id}}">Save article</button>
            </span></p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>